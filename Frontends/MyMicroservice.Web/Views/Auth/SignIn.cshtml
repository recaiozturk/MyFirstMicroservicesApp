
@{
    ViewData["Title"] = "SignIn";
}

@model MyMicroservice.Web.Models.SignInInput

    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card">
                <div class="card-body">
                    <h5>Üye Giriş</h5>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <form asp-controller="Auth" asp-action="SignIn" method="post">
                        <div class="mb-3">
                            <label asp-for="Email"  class="form-label">Email address</label>
                            <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="IsRememberMe" type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label asp-for="IsRememberMe" class="form-check-label">Check me out</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Giriş Yap</button>
                    </form>
                </div>
            </div>
        </div>
    </div>



